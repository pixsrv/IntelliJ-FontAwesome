<idea-plugin version="1" url="https://github.com/pixsrv/IntelliJ-FontAwesome">
    <id>pixsrv.intellij.fontawesome</id>
    <name>Font Awesome</name>
    <version>1.0</version>
    <vendor email="pixsrv@gmail.com" url="">pixsrv</vendor>

    <description><![CDATA[
      <h2>Font Awesome live templates / snippets</h2>
      <br />
      <p><a href="https://github.com/pixsrv/IntelliJ-FontAwesome">Documentation / list of snippets</a></p>
      <p>Based on <a href="https://github.com/bodiam/intellij-bootstrap3">bodiam's plugin</a></p>
    ]]></description>

    <change-notes><![CDATA[
          1.0 Initial release<br />
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <defaultLiveTemplatesProvider implementation="com.intellij.plugin.FontAwesome.FontAwesomeTemplatesProvider.java"/>
    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>